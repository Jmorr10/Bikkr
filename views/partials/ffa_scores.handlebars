<div id="freeForAllScores" class="scores-update">
    <div class="vstack gap-3">
        {{#each groups}}
            <div class="group-score-row">
                <h4 class="group-score-name">{{id}}</h4>
                {{#each playerScores}}
                    <div class="score-row d-flex px-3 py-2" {{#if ../../winners}}
                        {{#if (hasOwn ../../winners ../id)}}
                            {{#eq (get "name" (get ../id ../../winners)) name}}
                         style="order:-1!important;"
                            {{/eq}}
                        {{/if}}
                    {{/if}}>
                        <div class="score-name flex-1 ellipsis" data-name="{{name}}">{{name}}</div>
                        {{#if ../../winners}}
                            {{#if (hasOwn ../../winners ../id)}}
                                {{#eq (get "name" (get ../id ../../winners)) name}}
                                    <i class="icon-crown round-winner"></i>
                                {{/eq}}
                            {{/if}}
                        {{/if}}
                        <div class="score-value">{{points}}</div>

                    </div>
                {{/each}}
            </div>
        {{/each}}
    </div>
    <script>
        require(['jquery', 'app/player'], function (jQ, Player) {
            jQ(`#leaderboardContent .score-name[data-name="${Player.getPlayer().name}"]`).parent().addClass('highlighted-row');
        });
    </script>
</div>