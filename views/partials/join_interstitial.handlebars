<div id="join-interstitial" data-target="body" data-add="self" data-mode="append"
     class="bg-white d-flex flex-column align-items-center justify-content-center">

    <h1>Room: {{roomID}}</h1>
    <button id="joinBtn" class="btn btn-bkr-confirm mx-auto mt-4">{{INT_MESSAGES.JOIN}}</button>

    <script>
        require(['jquery', 'app/player', 'nosleep'], function (jQ, Player, NoSleep) {
            jQ('#joinBtn').click(function (e) {
                const soundContainer = new Audio();
                soundContainer.autoplay = true;
                soundContainer.src = "data:audio/mpeg;base64,";
                Player.setSoundElement(soundContainer);
                jQ('#join-interstitial').remove();

                let noSleepInstance = new NoSleep("BIKKR");
                noSleepInstance.enable();
            });
        });
    </script>

</div>