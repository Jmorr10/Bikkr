<div id="playerScores" class="modal-inner-content">
	<h1>Player Scores</h1>
    <div class="modal-scroll-container">
        <div class="score-holder">
            {{#if players}}
                {{#each players}}
                    {{#with this}}
                        <div class="score-row" {{#if ../winner}}{{#eq ../winner.name name}}style="order:-1 !important;"{{/eq}}{{/if}}>
                            <div class="score-name" data-name="{{name}}">{{name}}</div>
                            {{#if ../winner}}
                                {{#eq ../winner.name name}}
                                    <i class="icon-crown round-winner"></i>
                                {{/eq}}
                            {{/if}}
                            <div class="score-value">{{points}}</div>

                        </div>
                    {{/with}}
                {{/each}}
            {{else}}
                <div class="no-data-container">
                    <span class="no-data-title">No scores!</span>
                    <div class="place-img no-data"></div>
                </div>
            {{/if}}
        </div>
    </div>
    <script>
        require(['jquery', 'app/player'], function (jQ, Player) {
            jQ(`#leaderboardContent .score-name[data-name="${Player.getPlayer().name}"]`).parent().addClass('highlighted-row');
        });
    </script>
</div>