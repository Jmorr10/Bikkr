<div id="gameover" class="modal-popup open" data-target="body" data-add="self" data-mode="append-update">
    <div class="modal-black"></div>
    <div id="gameoverContent" class="modal-popup-content" style="justify-content: center; align-items: center;">
        <h1>Final Scores</h1>
        {{#or (eq roomType "individual") (and (eq roomType "group") (eq groupType "allForOne")) }}

            {{#equalsLength podiumList 0}}
                <div class="no-scores-container">
                    <span class="no-scores-title">No scores!</span>
                    <div class="place-img no-scores"></div>
                </div>
            {{else}}
                <div class="modal-scroll-container">
                    <div id="podium" class="well">
                        {{#each podiumList }}
                            {{#lte this.ranking 3}}
                                <div class="podium-box p{{this.ranking}} hidden">
                                    <div class="place-img"></div>
                                    <span class="podium-name">{{default this.name this.id "---"}}</span>
                                </div>
                            {{/lte}}
                        {{/each}}
                    </div>
                </div>
            {{/equalsLength}}
        {{else}}
            {{#and (isArray podiumList) (equalsLength podiumList 0) }}
                    <div class="no-scores-container">
                        <span class="no-scores-title">No scores!</span>
                        <div class="place-img no-scores"></div>
                    </div>
            {{else}}
                <div class="modal-scroll-container">
                    <div id="podium" class="well">
                        {{#each podiumList}}
                            <div class="podium-box ffa flex-column">
                                <span class="podium-name">{{default @key "---"}}</span>
                                <span class="group-winner">{{default this.[0].name "---"}}</span>
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/and}}
        {{/or}}
        <button id="closeGameOverBtn" class="modal-close-btn icon-cancel"></button>
    </div>

    <script>
        require(['jquery'], function (jQ) {
            jQ('#podium .podium-box.hidden').first().removeClass('hidden');

            let func = function () {
                jQ('#podium .podium-box.hidden').first().removeClass('hidden');
                if (jQ('#podium .podium-box.hidden').length > 0) {
                    setTimeout(func, 1000);
                }
            }

            setTimeout(func, 1000);
            jQ('#closeGameOverBtn').click(function () {
                jQ(this).parents('.modal-popup').removeClass('open');
            });
        });
    </script>

</div>
