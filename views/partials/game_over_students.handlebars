<div id="gameover" class="modal-popup open" data-target="body" data-add="self" data-mode="append-update">
    <div class="modal-black"></div>
    <div id="gameoverContent" class="modal-popup-content" style="justify-content: center">
        <h1>Game Over!</h1>
        {{#if ranking}}
            <div id="student-podium" class="p{{ranking}}">
                <div class="place-img{{#gt ranking 3}} good-try{{/gt}}"></div>
                <span class="ranking">{{ordinalize ranking}} place</span>
            </div>
        {{else}}
            <div id="student-podium">
                <div class="place-img good-try"></div>
                <span class="ranking">No score</span>
            </div>
        {{/if}}

        <button id="closeGameOverBtn" class="modal-close-btn icon-cancel"></button>
    </div>

    <script>
        require(['jquery'], function (jQ) {
            jQ('#closeGameOverBtn').click(function () {
                jQ(this).parents('.modal-popup').removeClass('open');
            });
        });
    </script>

</div>
