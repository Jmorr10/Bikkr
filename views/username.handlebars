<div id="usernameForm" data-target="#content" data-add="self">
	<div class="form-content">
		<div class="login-img"></div>
		<div style="flex: 1;">
			<p style="margin-top: 1.5rem;">Please enter a username</p>
			<input type="text" name="username" id="username" placeholder="ユーザー名" style="margin-bottom: 8px;">
			<p class="error-lbl">{{errorTxt}}</p>
		</div>
	</div>
	<input type="submit" id="submitUsername" value="OK">
	<script>
		require(['app/view_username'], function (view_username) {
			view_username.start('{{roomID}}');
		});
	</script>
</div>

<div id="header-text">
	<h1>母音聞く練習 - Username</h1>
</div>
